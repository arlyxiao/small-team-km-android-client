<?xml version="1.0" encoding="utf-8"?>
<set  xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 渐变透明度动画效果 -->
	<alpha
	     android:fromAlpha="1.0"
         android:toAlpha="0.0"
         android:duration="500"
	/>
	<!-- 画面转换位置移动动画效果 -->
	<translate 
	     android:fromXDelta="0"
	     android:fromYDelta="0"
	     android:toXDelta="0"
	     android:toYDelta="40"
	     android:duration="500"
	     android:fillAfter="true"
	/>	
</set>