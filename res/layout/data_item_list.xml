<?xml version="1.0" encoding="utf-8"?>

<!-- 笔记列表 -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        >
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/head_bar"
            android:id="@+id/head"
            >
        <Button
            style="@style/head_bar_button_go_back"
        />
        <TextView
               style="@style/head_bar_text_center"
               android:text="查看列表"
        />
        <ImageView
             android:src="@drawable/mi_data_item_add"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:onClick="on_create_data_item_click"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/data_list_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:background="@color/darkgrey"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_margin="10dp"
    >

        <ImageView
            android:id="@+id/data_list_image_iv_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_edit" />

        <TextView
            android:id="@+id/data_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/data_list_image_iv_edit"
            android:gravity="center"
            android:hint="列表浏览-名称"
            android:textSize="22dp" />
        <EditText
            android:id="@+id/data_list_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/data_list_image_iv_edit"
            android:gravity="center"
            android:visibility="gone"
            style="?android:attr/textViewStyle"
            android:hint="列表浏览-名称"/>

    </RelativeLayout>
     <LinearLayout
        android:id="@+id/list_no_data_show"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center" 
        android:orientation="vertical"
        android:visibility="gone"
    >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表没有数据" 
        />
   </LinearLayout>
    <com.teamkn.activity.dataitem.ListViewInterceptor
	    android:id="@+id/list"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:drawSelectorOnTop="false" 
    />
</LinearLayout>