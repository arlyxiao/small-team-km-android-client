<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item"  
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"     
    android:id="@+id/list_data_list_item_rl"
    android:descendantFocusability="beforeDescendants"
>
    <!-- android:clickable="true" -->
    <RelativeLayout 
        android:id="@+id/show_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	   <TextView
	           android:id="@+id/data_item_info_tv"
	           android:visibility="gone"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	   />
	   <ImageView
           android:id="@+id/data_item_title_iv_frush"
           android:layout_width="50dp"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:gravity="center"
           android:src="@android:drawable/ic_menu_directions" 
       />
	   <TextView
	       android:layout_marginLeft="50dp"
	       android:id="@+id/data_item_title_tv"
	       style="@style/text"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:gravity="center"
	       android:textColor="@color/black"
	       android:text="@string/app_name"
	       android:padding="10dp"
	       android:background="@color/gainsboro"
	       android:paddingRight="80dp"
	   />
	   <TextView
	       android:id="@+id/data_item_title_tv_go"
	       style="@style/text"
	       android:layout_width="80dp"
	       android:gravity="center"
	       android:textColor="@color/black"
	       android:text="@string/app_name"
	       android:padding="10dp"
	       android:background="@color/burlywood"
	       android:layout_alignParentRight="true"
	       android:clickable="true"
	   />
    </RelativeLayout>
    
</RelativeLayout>