		 </RadioGroup> -->
		 <TextView
		     android:id="@+id/data_list_title_tv"
		     android:layout_width="fill_parent"
		     android:layout_height="50dp"
		     android:text="新建列表 :    安卓开发"
		     android:textSize="20dp"
		     android:layout_margin="10dp"
		     android:background="#789"
		     android:gravity="center"
		 />
    </TableRow>
    <ScrollView 
        android:layout_below="@+id/radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
             <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/create_data_item_title_et"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:hint="子项标题"
    />
    <TextView
        android:layout_below="@+id/create_data_item_title_et"
        android:id="@+id/data_list_contnet_msg_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="内容 ："
    />
    <EditText
        android:layout_below="@+id/data_list_contnet_msg_tv"
        android:layout_marginTop="10dp"
        android:id="@+id/create_data_item_content_et"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:minHeight="100dp"
    />
    
    
    <RelativeLayout 
        android:layout_below="@+id/create_data_item_content_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/create_data_list_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表名称已存在" 
            android:layout_marginRight="20dp"
        />
