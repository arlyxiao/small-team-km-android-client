<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        android:background="@color/white"
        >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/head_bar"
        android:id="@+id/head"
    >
        <ImageView
            android:id="@+id/iv_foot_view"
            android:src="@drawable/sliding_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
        />
        <LinearLayout 
            android:id="@+id/main_user_name_rl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/selector"
            style="@style/head_bar_text_center"
        >
           <TextView
               android:id="@+id/main_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="社交圈子"
               android:textColor="@color/white"
               android:gravity="center_vertical"
           />
        </LinearLayout>
        <ImageButton
            android:onClick="click_add_follow_user_ib"
            android:background="@drawable/add_follow_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    
     <LinearLayout 
	      android:id="@+id/bar"
	      android:layout_height="40dp"
	      android:layout_width="fill_parent"
	      android:orientation="horizontal"
	      android:gravity="center"
	      android:layout_marginBottom="5dp"
	      android:layout_marginTop="10dp"
	      android:background="@color/lightsteelblue"
     >
      <Button
           android:onClick="click_mimsg_button"
           android:layout_width="100dp"
           android:layout_height="fill_parent"
           android:background="@color/lightsteelblue"
           android:text="我的信息"
      />
      <Button
           android:onClick="click_follow_button"
           android:layout_width="100dp"
           android:layout_height="fill_parent"
           android:background="@color/lightsteelblue"
           android:text="我的FOLLOW"
      />
      <Button
           android:onClick="click_vermicelli_button"
           android:layout_width="100dp"
           android:layout_height="fill_parent"
           android:background="@color/lightsteelblue"
           android:text="我的粉丝"
      />
	  </LinearLayout>
	  <ImageView
	       android:layout_below="@+id/bar"
	       android:id="@+id/cursor"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:scaleType="matrix"
	       android:src="@drawable/line" 
	       android:layout_marginBottom="5dp"
	  />
<ScrollView 
   android:id="@+id/user_msg"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
>
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">	  
	<LinearLayout 
	     style="@style/body"
	>
	    <RelativeLayout
	        android:id="@+id/relativelayout_set_user_avatar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:background="#fff"
	        android:gravity="center_vertical"
	        android:onClick="click_set_user_avatar"
	        android:padding="10dp" >
	
	        <ImageView
	            android:id="@+id/iv_user_avatar"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:background="@drawable/user_default_avatar_normal" />
	
	        <TextView
	            android:id="@+id/tv_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:layout_toRightOf="@+id/iv_user_avatar"
	            android:gravity="center_vertical"
	            android:onClick="click_set_user_name"
	            android:text="设置头像" />

	        <TextView
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/iv_user_avatar"
	            android:layout_alignLeft="@+id/tv_user_name"
	            android:text="已FOLLOW" />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:padding="10dp" 
	            android:layout_margin="10dp"
	            android:background="@drawable/no_background_border_bg"
	     >     
	           <RelativeLayout 
	               android:id="@+id/msg_sex_like"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content">
	               
	               <TextView
	                   android:layout_marginLeft="50dp"
	                   android:text="性别  ："
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	               />
	               <TextView
	                   android:layout_marginRight="50dp"
	                   android:text="爱好  ："
	                   android:layout_alignParentRight="true"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	               />
	           </RelativeLayout>
	           
	           <RelativeLayout 
	               android:layout_below="@+id/msg_sex_like"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content">
	
	               <TextView
	                   android:layout_marginTop="10dp"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	                   android:layout_alignParentRight="true"
	                   android:layout_alignParentTop="true"
	                   android:layout_marginRight="48dp"
	                   android:text="更多信息" />
	
	           </RelativeLayout>
	           
	    </RelativeLayout>
	    
	    
	    
	    <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|center_horizontal"
	            android:layout_margin="10dp"
	     >     
	           <TableLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="120dp" 
	               android:background="@drawable/grey_rectangular_bg">
	            <TableRow
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:gravity="center_horizontal"
	            >
	              
	               <TextView 
	                   android:textColor="@color/black" 
	                   android:text="关注" 
	                   android:layout_width="120dp"
	                   android:layout_height="60dp"
	                   android:padding="3dip" 
	                   android:gravity="center"
	               />
	              
	               <TextView 
	                   android:textColor="@color/black" 
	                   android:text="粉丝" 
	                   android:layout_width="120dp"
	                   android:layout_height="60dp"
	                   android:padding="3dip" 
	                   android:gravity="center"
	               />
	              
	            </TableRow> 
	            <TableRow
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:gravity="center_horizontal"
	                android:paddingBottom="20dp"
	            >
	              
	                 <Button 
	                      android:onClick="click_user_public_data_list"
		                  android:id="@+id/public_list_tv"
		                  android:textColor="@color/black" 
		                  android:text="" 
		                  android:layout_width="fill_parent"
		                  android:layout_height="60dp"
		                  android:paddingLeft="10dip"
		                  android:paddingRight="10dp" 
		                  android:gravity="center"
		                  android:singleLine="true"
		                  android:background="@drawable/title_back"
                    />
	              
	               <!-- <TextView 
	                   android:textColor="@color/black" 
	                   android:text="协作" 
	                   android:layout_width="120dp"
	                   android:layout_height="60dp"
	                   android:padding="3dip" 
	                   android:gravity="center"
	               /> -->
	              
	            </TableRow> 
	         </TableLayout>    
	    </RelativeLayout>
	</LinearLayout>  
 </RelativeLayout>
 </ScrollView>
 <ListView
      android:visibility="gone"
      android:id="@+id/list_view"
      android:layout_margin="10dp"
      android:divider="#00000000"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" 
  >  
  </ListView>
</LinearLayout>