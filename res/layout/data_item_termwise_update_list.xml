<?xml version="1.0" encoding="utf-8"?>

<!-- 笔记列表 -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        >
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/head_bar"
            android:id="@+id/head"
            >
        <Button
            android:id="@+id/go_back_button"
            style="@style/head_bar_button_go_back"
        />
        <TextView
            style="@style/head_bar_text"
            android:layout_centerHorizontal="true"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="修改建议游览" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/data_list_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/darkgrey"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:id="@+id/data_list_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="列表浏览-名称"
            android:gravity="center"
            android:textSize="22dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/data_list_title_rl" 
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </ListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical" >

       <Button
           android:onClick="click_accept_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="接受修改" />
       <Button
           android:onClick="click_refuse_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="跳过修改" />

       <ProgressBar  
		    android:id="@+id/progressBar"
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content"  
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
		    style="?android:attr/progressBarStyleHorizontal" 
		    android:max="100" 
		    android:progress="00" 
		    android:secondaryProgress="0" 
	   /> 
   </RelativeLayout>
</RelativeLayout>