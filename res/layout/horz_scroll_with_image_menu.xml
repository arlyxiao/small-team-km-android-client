<?xml version="1.0" encoding="utf-8"?>
<com.teamkn.activity.base.slidingmenu.ScrollLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ScrollLayoutTest"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <RelativeLayout 
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#5B5B5B"
    >   
        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/teamkn_show_msg_tv" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Seen by 1 friend"  
            android:textColor="#fff"
        /> 
            
        <LinearLayout
            android:layout_below="@+id/teamkn_show_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="50dp" 
        >
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:padding="20dp" 
            >
                <RelativeLayout
                    android:id="@+id/foot_rl_node"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_note_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="我的笔记"   
                        android:textColor="#fff"
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                <RelativeLayout
                    android:id="@+id/foot_rl_chat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_chatlist_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="多人讨论" 
                        android:textColor="#fff"
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                <RelativeLayout
                    android:id="@+id/foot_rl_search"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_search_node_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="搜索" 
                        android:textColor="#fff"
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                <RelativeLayout
                    android:id="@+id/foot_rl_setting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_setting_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="设置" 
                        android:textColor="#fff"
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                <RelativeLayout
                    android:id="@+id/foot_rl_account_manage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_account_manage_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="账号管理" 
                        android:textColor="#fff"
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                <RelativeLayout
                    android:id="@+id/foot_rl_about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" 
                    android:layout_marginTop="5dp"
                    android:onClick="click_go_about_teamkn_activity"
                >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:text="关于" 
                    />
                    <ImageView
                        android:src="@drawable/camera_accept"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true" 
                    />
                </RelativeLayout>
                <TextView
                        android:background="#000"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="10dp"
                />
                
            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="center_horizontal"
                
            >
                <ImageView
                    android:src="@android:drawable/ic_menu_agenda"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:onClick="click_go_edit_node_activity"
                />
                <ImageView
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:onClick="click_go_edit_node_album_camera_activity"
                />
                <ImageView
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:onClick="click_go_edit_node_record_activity"
                />
                <ImageView
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:onClick="click_exit_teamkn_activity"
                />
            </LinearLayout>  
        </LinearLayout>  
       <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_menu_forward"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:contentDescription="@string/app_name"
       />
   </RelativeLayout>
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:id="@+id/linearlayout_loading">  
   </LinearLayout>
</com.teamkn.activity.base.slidingmenu.ScrollLayout>
