<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<com.teamkn.activity.base.slidingmenu.ScrollLayout
	  android:id="@+id/ScrollLayoutTest"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
	  
	<RelativeLayout 
		android:id="@+id/menu"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#5B5B5B"
	>   
	       <TextView
	            android:paddingTop="10dp"
	            android:paddingLeft="20dp"
	            android:id="@+id/teamkn_show_msg_tv" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text=""  
	            android:textColor="#fff"
	        />
	        <ListView 
	            android:layout_below="@+id/list_menu_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"    
	        /> 
	        <LinearLayout
	            android:layout_below="@+id/teamkn_show_msg_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:orientation="vertical"
	            android:layout_marginLeft="50dp" 
	            android:layout_alignParentRight="true"
	        >
	            <LinearLayout
	                android:orientation="vertical"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent" 
	                android:padding="20dp" 
	            >
	                <RelativeLayout
	                    android:id="@+id/foot_rl_node"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="5dp" 
	                    android:layout_marginTop="5dp"
	                    android:onClick="click_go_note_activity"
	                >
	                    <TextView
	                        android:layout_alignParentLeft="true"
	                        android:layout_width="wrap_content"
	                        android:layout_height="30dp"
	                        android:gravity="center_vertical"
	                        android:text="我的笔记"   
	                        android:textColor="#fff"
	                    />
	                    <ImageView
	                        android:src="@drawable/camera_accept"
	                        android:layout_width="30dp"
	                        android:layout_height="30dp"
	                        android:layout_alignParentRight="true" 
	                    />
	                </RelativeLayout>
	                <TextView
	                        android:background="#000"
	                        android:layout_width="fill_parent"
	                        android:layout_height="0.1dp"
	                        android:layout_marginBottom="10dp"
	                />
	                <RelativeLayout
	                    android:id="@+id/foot_rl_chat"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingRight="5dp" 
	                    android:layout_marginTop="5dp"
	                    android:onClick="click_go_chatlist_activity"
	                >
	                    <TextView
	                        android:layout_alignParentLeft="true"
	                        android:layout_width="wrap_content"
	                        android:layout_height="30dp"
	                        android:gravity="center_vertical"
	                        android:text="多人讨论" 
	                        android:textColor="#fff"
	                    />
	                    <ImageView
	                        android:src="@drawable/camera_accept"
	                        android:layout_width="30dp"
	                        android:layout_height="30dp"
	                        android:layout_alignParentRight="true" 
	                    />
	                </RelativeLayout>
	                <TextView
	                        android:background="#000"
	                        android:layout_width="fill_parent"
	                        android:layout_height="0.1dp"
	                        android:layout_marginBottom="10dp"
	                />
	                <RelativeLayout
	                    android:id="@+id/foot_rl_search"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingRight="5dp" 
	                    android:layout_marginTop="5dp"
	                    android:onClick="click_go_search_node_activity"
	                >
	                    <TextView
	                        android:layout_alignParentLeft="true"
	                        android:layout_width="wrap_content"
	                        android:layout_height="30dp"
	                        android:gravity="center_vertical"
	                        android:text="搜索笔记" 
	                        android:textColor="#fff"
	                    />
	                    <ImageView
	                        android:src="@drawable/camera_accept"
	                        android:layout_width="30dp"
	                        android:layout_height="30dp"
	                        android:layout_alignParentRight="true" 
	                    />
	                </RelativeLayout>
	                <TextView
	                        android:background="#000"
	                        android:layout_width="fill_parent"
	                        android:layout_height="0.1dp"
	                        android:layout_marginBottom="10dp"
	                />
	                <RelativeLayout
	                    android:id="@+id/foot_rl_search"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingRight="5dp" 
	                    android:layout_marginTop="5dp"
	                    android:onClick="click_go_contacts_activity"
	                >
	                    <TextView
	                        android:layout_alignParentLeft="true"
	                        android:layout_width="wrap_content"
	                        android:layout_height="30dp"
	                        android:gravity="center_vertical"
	                        android:text="联系人" 
	                        android:textColor="#fff"
	                    />
	                    <ImageView
	                        android:src="@drawable/camera_accept"
	                        android:layout_width="30dp"
	                        android:layout_height="30dp"
	                        android:layout_alignParentRight="true" 
	                    />
	                </RelativeLayout>
	                <TextView
	                        android:background="#000"
	                        android:layout_width="fill_parent"
	                        android:layout_height="0.1dp"
	                        android:layout_marginBottom="10dp"
	                />
	                <RelativeLayout
	                    android:id="@+id/foot_rl_setting"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingRight="5dp" 
	                    android:layout_marginTop="5dp"
	                    android:onClick="click_go_setting_activity"
	                >
	                    <TextView
	                        android:layout_alignParentLeft="true"
	                        android:layout_width="wrap_content"
	                        android:layout_height="30dp"
	                        android:gravity="center_vertical"
	                        android:text="设置" 
	                        android:textColor="#fff"
	                    />
	                    <ImageView
	                        android:src="@drawable/camera_accept"
	                        android:layout_width="30dp"
	                        android:layout_height="30dp"
	                        android:layout_alignParentRight="true" 
	                    />
	                </RelativeLayout>
	                <TextView
	                        android:background="#000"
	                        android:layout_width="fill_parent"
	                        android:layout_height="0.1dp"
	                        android:layout_marginBottom="10dp"
	                />
	            </LinearLayout>
	            
	            <LinearLayout
	                android:orientation="horizontal"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:gravity="center_horizontal"
	                
	            >
	                <ImageView
	                    android:src="@android:drawable/ic_menu_agenda"
	                    android:layout_width="60dp"
	                    android:layout_height="60dp"
	                    android:layout_margin="5dp"
	                    android:onClick="click_go_edit_node_activity"
	                />
	                <ImageView
	                    android:src="@android:drawable/ic_menu_camera"
	                    android:layout_width="60dp"
	                    android:layout_height="60dp"
	                    android:layout_margin="5dp"
	                    android:onClick="click_go_edit_node_album_camera_activity"
	                />
	                <ImageView
	                    android:src="@android:drawable/ic_btn_speak_now"
	                    android:layout_width="50dp"
	                    android:layout_height="50dp"
	                    android:layout_margin="5dp"
	                    android:onClick="click_go_edit_node_record_activity"
	                />
	                <ImageView
	                    android:src="@android:drawable/ic_menu_close_clear_cancel"
	                    android:layout_width="60dp"
	                    android:layout_height="60dp"
	                    android:layout_margin="5dp"
	                    android:onClick="click_exit_teamkn_activity"
	                />
	            </LinearLayout>  
	        </LinearLayout>  
	   </RelativeLayout>
	   
	   <LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:id="@+id/linearlayout_loading">  
	   </LinearLayout>
	</com.teamkn.activity.base.slidingmenu.ScrollLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" 
        android:layout_gravity="bottom"
        android:background="#222222"
        android:gravity="center_vertical"
        android:visibility="gone"
    >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="更新"
           android:textColor="#fff"
           android:layout_marginLeft="20dp"
           android:textSize="20dp"
       /> 
       <LinearLayout 
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:gravity="center"
           android:onClick="click_go_note_activity"
       >
           <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="笔记"
	           android:textColor="#fff"
	           android:textSize="20dp" 
           />
       </LinearLayout>
        
       <LinearLayout 
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:gravity="center"
           android:onClick="click_go_chatlist_activity"
       >
           <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="对话串"
	           android:textColor="#fff"
	           android:textSize="20dp"
           />
       </LinearLayout>
       <LinearLayout 
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:gravity="center"
           android:onClick="click_go_contacts_activity"
       >
           <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="好友"
	           android:textColor="#fff"
	           android:textSize="20dp"
           /> 
       </LinearLayout>  
    </LinearLayout>
</FrameLayout>