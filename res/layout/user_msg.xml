<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        >

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/head_bar"
    >
        <Button
                style="@style/head_bar_button_go_back"
        />
        <TextView
                style="@style/head_bar_text_center"
                android:text="个人信息"
        />
    </RelativeLayout>
    
    <RelativeLayout 
            android:id="@+id/relativelayout_set_user_avatar" 
            android:background="#fff" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" 
            android:layout_margin="10dp"
            android:onClick="click_set_user_avatar"
     >     
          <ImageView
              android:id="@+id/iv_user_avatar"
              android:background="@drawable/user_default_avatar_normal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"  
          />
          <TextView
              android:text="设置头像"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:layout_marginLeft="20dp" 
              android:layout_marginTop="20dp"
              android:gravity="center_vertical"
              android:layout_toRightOf="@+id/iv_user_avatar"
          /> 
          <ImageView
              android:src="@drawable/user_avatar_gt"
              android:layout_width="20dp"
              android:layout_height="20dp" 
              android:layout_alignParentRight="true"
              android:layout_marginRight="20dp"
              android:layout_marginTop="20dp"
          /> 
    </RelativeLayout>
    <RelativeLayout 
            android:background="#fff" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" 
            android:layout_margin="10dp"
     >     
           <RelativeLayout 
	            android:id="@+id/relativelayout_set_user_name" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:onClick="click_set_user_name"
           >
	          <TextView
	              android:id="@+id/user_name_"
	              android:text="名字"
	              android:layout_marginRight="50dp"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"  
	          />
	          <TextView
	              android:id="@+id/tv_user_name"
	              android:text="用户名称"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content" 
	              android:layout_marginLeft="20dp" 
	              android:gravity="center_vertical"
	              android:layout_toRightOf="@+id/user_name_"
	          /> 
	          <ImageView
	              android:src="@drawable/user_avatar_gt"
	              android:layout_width="20dp"
	              android:layout_height="20dp" 
	              android:layout_alignParentRight="true"
	              android:layout_marginRight="20dp"
	          /> 
	       </RelativeLayout>
    </RelativeLayout>
</LinearLayout>