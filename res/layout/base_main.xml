<?xml version="1.0" encoding="utf-8"?>

<!-- 主界面，包含功能选择 -->

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/body"
>	
	<include 
		layout="@layout/part_head_bar_user_info"
	/>
	
	<RelativeLayout 
		style="@style/no_padding_body"
	>
		<!-- 主栏，显示图标和进度条 -->
		<LinearLayout
		  android:id="@+id/base_main_action"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		>
		
	    <Button
	      android:id="@+id/new_text"
	      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	      android:text="@string/new_text"
	      android:onClick="click_new_text"
	    ></Button>
	    <Button
	      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	      android:id="@+id/new_photo" 
	      android:text="@string/new_photo"
	      android:onClick="click_new_photo"
	    ></Button>
		</LinearLayout>
		
		 <ListView 
		   android:id="@+id/note_list"
		   android:layout_height="fill_parent"
		   android:layout_width="fill_parent"
		   android:layout_below="@+id/base_main_action"
		   android:layout_above="@+id/base_main_syn_bar"
		 />
		
		<!-- 同步进度条和提示文字 -->
		<LinearLayout
		  android:id="@+id/base_main_syn_bar"
			android:layout_alignParentBottom="true"
			style="@style/bottom_bar"
		>	
			<LinearLayout
				style="@style/bottom_bar_top_line"
			/>
			<TextView 
				android:id="@+id/main_data_syn_text" 
				android:layout_height="20dp" 
				android:layout_width="fill_parent" 
				android:gravity="center"
				android:textSize="13dp"
			/>
			
			<ProgressBar 
				android:id="@+id/main_data_syn_progress_bar" 
				style="@android:style/Widget.ProgressBar.Horizontal"
				android:layout_height="20dp" 
				android:layout_width="fill_parent"
				android:visibility="gone"
			/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>