<?xml version="1.0" encoding="utf-8"?>

<!-- 主界面，包含功能选择 -->

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        >
    <!-- 六个按钮 -->
    <TableLayout
            android:id="@+id/base_main_actions"
            android:layout_width="480px"
            android:layout_height="320px"
            android:layout_marginBottom="20px">
        <TableRow
                android:layout_width="480px"
                android:layout_height="160px"
                >
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                <Button
                        android:id="@+id/new_text"
                        android:text="@string/new_text"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:onClick="click_new_text"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                <Button
                        android:id="@+id/from_album"
                        android:text="@string/from_album"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:onClick="click_from_album"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                <Button
                        android:id="@+id/from_camera"
                        android:text="@string/from_camera"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:onClick="click_from_camera"
                        />
            </LinearLayout>
        </TableRow>
        <TableRow
                android:layout_width="480px"
                android:layout_height="160px">
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                <Button
                        android:id="@+id/start_search"
                        android:text="@string/start_search"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:onClick="click_start_search"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                   <Button
                     android:id="@+id/manual_syn_bn"
                     android:text="@string/manual_syn_bn"
                     android:layout_height="fill_parent"
                     android:layout_width="fill_parent"
                     android:onClick="click_manual_syn"
                     />
            </LinearLayout>
            <LinearLayout
                    android:layout_height="160px"
                    android:layout_width="160px"
                    >
                <Button
                        android:text="@string/laceholder"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <!-- 三个长条框 -->
    <LinearLayout
            android:layout_width="480px"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            >
        <Button
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="@string/base_main_show_note_list"
                android:onClick="show_note_list"
                />
    </LinearLayout>
    <!-- 同步进度条和提示文字 -->
    <LinearLayout
            android:id="@+id/base_main_syn_bar"
            android:layout_width="480px"
            android:layout_height="100px"
            android:layout_marginBottom="10px"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/main_data_syn_text"
                android:layout_height="20dp"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:textSize="13dp"
                />
        <ProgressBar
                android:id="@+id/main_data_syn_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="20dp"
                android:layout_width="fill_parent"
                android:visibility="gone"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="480px"
            android:layout_height="100px"
            android:layout_marginBottom="20px"
            >
    </LinearLayout>

    <!-- 底部菜单 -->
    <LinearLayout
            android:layout_width="480px"
            android:layout_height="120px"
            android:orientation="horizontal"
            >
        <LinearLayout
                android:layout_width="120px"
                android:layout_height="120px"
                ></LinearLayout>
        <LinearLayout
                android:layout_width="120px"
                android:layout_height="120px"
                ></LinearLayout>
        <LinearLayout
                android:layout_width="120px"
                android:layout_height="120px"
                ></LinearLayout>
        <LinearLayout
                android:layout_width="120px"
                android:layout_height="120px"
                ></LinearLayout>
    </LinearLayout>


</LinearLayout>