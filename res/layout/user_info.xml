<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_gravity="right|top"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_dialog"
        android:onClick="go_back"
    />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
    >
        <ImageView
            android:id="@+id/user_info_user_avatar_iv"
            android:layout_margin="2dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:background="@drawable/user_default_avatar_normal"
        />
        <TextView
            android:id="@+id/user_info_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
        />
    </LinearLayout>
    
    <!-- 发送邀请的动作条 -->
    <LinearLayout
        android:id="@+id/user_info_invite_action_ll"
        android:layout_height="190dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
    >
        <EditText
            android:id="@+id/user_info_invite_message_et"
            android:layout_margin="5dp"
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            android:gravity="top"
            android:textColor="#000"
        />
        <Button
            android:id="@+id/user_info_send_invite_bn"
            android:layout_margin="5dp"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:text="发送邀请"
            android:textColor="#000"
        />
    </LinearLayout>
    
    <!-- 接受邀请的动作条 -->
    <LinearLayout
        android:id="@+id/user_info_be_invite_action_ll"
        android:layout_height="190dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
    >
        <Button
            android:id="@+id/user_info_accept_invite_bn"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:text="接受邀请"
            android:textColor="#000"
        />
        <Button
            android:id="@+id/user_info_refuse_invite_bn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:text="拒绝邀请"
            android:textColor="#000"
        />
    </LinearLayout>
    
    <!-- 互为联系人 -->
    <LinearLayout
        android:id="@+id/user_info_contact_action_ll"
        android:layout_height="190dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="10dp"
    >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="互为联系人" 
            android:textColor="#000"
        />
    </LinearLayout>
</LinearLayout>