<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/body"
        >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/head_bar"
        android:id="@+id/head"
    >
        <ImageView
            android:id="@+id/iv_foot_view"
            android:src="@drawable/sliding_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
        />
        <LinearLayout 
            android:id="@+id/main_user_name_rl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/selector"
            style="@style/head_bar_text_center"
        >
           <TextView
               android:id="@+id/main_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/main_user_name_default"
               android:textColor="@color/white"
               android:gravity="center_vertical"
           />
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativelayout_set_user_avatar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:onClick="click_set_user_avatar"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_default_avatar_normal" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_user_avatar"
            android:gravity="center_vertical"
            android:onClick="click_set_user_name"
            android:text="设置头像" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user_avatar"
            android:layout_alignLeft="@+id/tv_user_name"
            android:text="已FOLLOW" />
    </RelativeLayout>
    
    <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" 
            android:layout_margin="10dp"
            android:background="@drawable/no_background_border_bg"
     >     
           <RelativeLayout 
               android:id="@+id/msg_sex_like"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               
               <TextView
                   android:layout_marginLeft="50dp"
                   android:text="性别  ："
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
               />
               <TextView
                   android:layout_marginRight="50dp"
                   android:text="爱好  ："
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
               />
           </RelativeLayout>
           
           <RelativeLayout 
               android:layout_below="@+id/msg_sex_like"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="48dp"
                   android:text="更多信息" />

           </RelativeLayout>
           
    </RelativeLayout>
    
    
    
    <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="10dp"
     >     
           <TableLayout 
               android:layout_width="fill_parent"
               android:layout_height="120dp" 
               android:background="@drawable/grey_rectangular_bg">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
            >
              
               <TextView 
                   android:textColor="@color/black" 
                   android:text="关注" 
                   android:layout_width="120dp"
                   android:layout_height="60dp"
                   android:padding="3dip" 
                   android:gravity="center"
               />
              
               <TextView 
                   android:textColor="@color/black" 
                   android:text="粉丝" 
                   android:layout_width="120dp"
                   android:layout_height="60dp"
                   android:padding="3dip" 
                   android:gravity="center"
               />
              
            </TableRow> 
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
            >
              
               <TextView 
                   android:textColor="@color/black" 
                   android:text="原创" 
                   android:layout_width="120dp"
                   android:layout_height="60dp"
                   android:padding="3dip" 
                   android:gravity="center"
               />
              
               <TextView 
                   android:textColor="@color/black" 
                   android:text="协作" 
                   android:layout_width="120dp"
                   android:layout_height="60dp"
                   android:padding="3dip" 
                   android:gravity="center"
               />
              
            </TableRow> 
         </TableLayout>    
    </RelativeLayout>
</LinearLayout>


