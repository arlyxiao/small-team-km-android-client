<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#3C9F00"
                android:startColor="#3C9F00" />

            <corners
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
            <stroke 
                android:color="#66000000"
                android:width="1dp" />
        </shape>
    </item>
    <item android:top="3dp" android:bottom="3dp" android:left="9dp" android:right="9dp">
        <bitmap
            android:src="@drawable/tkn_top_bar_add_png" />
    </item>

</layer-list>